<% layout("layouts/boilerplate") -%>

    <h2 class="my-4">Show All Listings</h2>

    <div class="row">
        <% for(let listing of allListings){ %>
            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                <a href="/listings/<%=listing._id%>" style="text-decoration: none;">
                    <div class="card h-100">
                        <img src="<%= listing.image.url %>" class="card-img-top listing-img" alt="listing image">
                        <div class="card-body">
                            <p class="card-text">
                                <b>Title: <%= listing.title %></b> <br>
                                Price: &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                            </p>
                        </div>
                        <div class="card-img-overlay">
                          
                        </div>
                    </div>

                </a>

            </div>
            </a>
            <% } %>
    </div>