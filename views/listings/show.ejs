<% layout("layouts/boilerplate") -%>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <h3 class="card-title text-primary fw-bold mx-2">
                    <%= listing.title %>
                </h3>
                <div class="card shadow-lg border-0 rounded-3">

                    <img src="<%= listing.image.url %>" class="card-img-top listing-img"
                        style="height:250px; object-fit:cover;" alt="Listing image">

                    <div class="card-body">
                        <p class="card-text text-muted mx-2"><i>
                                <%= listing.owner.username %>
                            </i></p>
                        <p class="card-text text-muted mx-2">
                            <%= listing.description %>
                        </p>

                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item">
                                <b>üí∞ Price:</b> ‚Çπ<%= listing.price.toLocaleString("en-IN") %> / night
                            </li>
                            <li class="list-group-item">
                                <b>üìç Location:</b>
                                <%= listing.location %>
                            </li>
                            <li class="list-group-item">
                                <b>üåç Country:</b>
                                <%= listing.country %>
                            </li>
                        </ul>
                        <!-- <%if(currUser && currUser._id.equals(listing.owner._id)) { %> -->
                        <div class="d-flex gap-5 mx-2 mb-3">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">
                                ‚úèÔ∏è Edit
                            </a>
                            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post"
                                onsubmit="return confirm('Are you sure you want to delete this listing?');">
                                <button type="submit" class="btn btn-danger">
                                    üóëÔ∏è Delete
                                </button>
                            </form>
                        </div>
                        <!-- <% }%> -->
                    </div>
                </div>
            </div>

            <!-- Review Form -->
            <% if(currUser){%>
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 mt-4">
                        <div class="card shadow-lg border-0 rounded-3">
                            <div class="card-body">
                                <h4 class="card-title text-primary fw-bold mb-3">üìù Leave a Review</h4>

                                <form action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation"
                                    method="POST">
                                    <div class="mb-3">
                                        <fieldset class="starability-slot">
                                            <legend>First rating:</legend>
                                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                                value="1" checked aria-label="No rating." />
                                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                            <label for="first-rate1" title="Terrible">1 star</label>
                                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                            <label for="first-rate2" title="Not good">2 stars</label>
                                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                            <label for="first-rate3" title="Average">3 stars</label>
                                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                            <label for="first-rate4" title="Very good">4 stars</label>
                                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                            <label for="first-rate5" title="Amazing">5 stars</label>
                                        </fieldset>

                                    </div>

                                    <div class="mb-3">
                                        <label for="comment" class="form-label fw-semibold">üí¨ Comment</label>
                                        <textarea class="form-control" id="comment" name="review[comment]" rows="3"
                                            placeholder="Share your experience..." required></textarea>
                                        <div class="invalid-feedback">
                                            Please add some comments for your review.
                                        </div>
                                    </div>

                                    <div class="text-start mb-3">
                                        <button type="submit" class="btn btn-success px-4">
                                            üöÄ Submit Review
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% }%>
                    <!-- All Reviews Section -->
                    <div class="row justify-content-center mt-5">
                        <div class="col-md-8 col-lg-6">
                            <h4 class="text-primary fw-bold mb-3">üí¨ All Reviews</h4>

                            <% if (listing.reviews && listing.reviews.length> 0) { %>
                                <% listing.reviews.forEach(review=> { %>
                                    <div class="card mb-3 shadow-sm border-0 rounded-3">
                                        <div class="card-body">
                                            <h6 class="fw-semibold text-secondary">
                                                ‚≠ê <%= review.rating %> / 5
                                            </h6>
                                            <p class="starability-result" data-rating="<%= review.rating %>">Rated: <%= review.rating %> stars</p>
                                            <p class="mb-2">
                                                <%= review.comment %>
                                            </p>

                                            <form
                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">üóëÔ∏è
                                                    Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <p class="text-muted fst-italic">No reviews yet. Be the first to share your
                                                experience!</p>
                                            <% } %>
                        </div>
                    </div>
        </div>
    </div>